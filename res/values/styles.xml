<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="app_theme" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="mystyle" parent="android:Animation">  
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画   
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画   
    </style>  
    
    <!-- 对话框样式  -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>  
    
    <style name="common_button_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:onClick">onClick</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/button_press_color</item>
        <item name="android:background">@drawable/button_normal_selector</item>
    </style>
    
    <!-- 修改密码界面   -->
    <style name="amend_password_style">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:password">true</item>
        <item name="android:textColor">@color/edit_password_color</item>
        <item name="android:id">@+id/edittext_user_name</item>
        <item name="android:textColorHint">@color/edit_user_color</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="amend_password_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/login_text_color</item>
    </style>
    
    <!-- 登录/注册界面   -->
    <style name="login_linearlayout_style">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="login_edittext_style">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/edit_password_color</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/edit_user_color</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="login_button_style">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
    </style>
    
    <style name="register_imageview_style">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:src">@drawable/hook_icon</item>
    </style>
    
    <!-- ARS界面 -->
    <style name="ars_textview_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <style name="ars_listview_style">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:divider">@null</item>
        <item name="android:scrollbars">none</item>
    </style>
   
    <style name="ars_textview_top_style">
       <item name="android:textColor">@color/black</item>
       <item name="android:textSize">16sp</item>
       <item name="android:layout_weight">1</item>
       <item name="android:layout_marginLeft">5dp</item>        
    </style>
    	
    <style name="ars_linearlayout_open_style">
        <item name="android:layout_marginLeft">0.5dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginRight">0.5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ars_open_item_bg</item>
    </style>
    
    <!-- 注销界面  -->
    <style name="cancell_textview_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="cancell_edittext_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/edit_user_color</item>
        <item name="android:textColor">@color/edit_password_color</item>
    </style>
    
    <!-- 找回密码界面  -->
    <style name="lookfor_pwd_imageview_style">
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">onClick</item>
        <item name="android:clickable">true</item>
    </style>
    
    <!-- 设置界面   -->
    <style name="setting_textview_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/login_text_color</item>
    </style>
    
    <!-- 编辑用户信息界面  -->
	<style name="user_edittext_style">
	    <item name="android:layout_marginLeft">10dp</item>
	    <item name="android:background">@drawable/edit_bg</item>
	    <item name="android:textColor">@color/edit_male_color</item>
	    <item name="android:textSize">16sp</item>
	</style>

	<style name="rd_model_style" >
        <item name="android:background">@drawable/rb_model_bg</item>
        <item name="android:button">@null</item>
    </style>
    
	<style name="dialog" parent="@android:style/Theme.Dialog">
         <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@null</item>
    </style>
    
	<style name="VibrationRadioBtn">  
        <item name="android:button">@drawable/vibration_level_selector</item>  
</style> 
</resources>
