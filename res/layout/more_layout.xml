<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.ananda.tailing.bike.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/layout_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="-15dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|right|center_vertical"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview_login"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/more_login_selector" />

                <ImageView
                    android:id="@+id/imageview_user"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/more_user_selector" />

                <ImageView
                    android:id="@+id/imageview_settings"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/more_settings_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|left|center_vertical"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/more_about_selector" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageview_help"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:contentDescription="@string/imageview"
                        android:src="@drawable/more_help_selector" />

                    <ImageView
                        android:id="@+id/imageview_goods"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:contentDescription="@string/imageview"
                        android:src="@drawable/more_goods_selector" />

                    <ImageView
                        android:id="@+id/imageview_ars"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:contentDescription="@string/imageview"
                        android:src="@drawable/more_ars_selector" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.ananda.tailing.bike.view.TabBarView
        android:id="@+id/tab_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>