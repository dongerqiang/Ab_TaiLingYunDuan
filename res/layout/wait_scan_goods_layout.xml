<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <com.ananda.tailing.bike.view.TitleBarView
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/goods_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/goods_info"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="整车编码"
                        android:textSize="17sp" />
                    
                    <TextView android:id="@+id/scan_result_vehicle_code_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="10dp"
                        android:textSize="17sp" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名称"
                        android:textSize="17sp" />
                    
                    <TextView android:id="@+id/scan_result_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="10dp"
                        android:textSize="17sp" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="型号"
                        android:textSize="17sp" />
                    
                    <TextView android:id="@+id/scan_result_model_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="10dp"
                        android:textSize="17sp" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配置"
                        android:textSize="17sp" />
                    
                    <TextView android:id="@+id/scan_result_cfg_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="60dp"
                        android:textSize="17sp" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="条码"
                        android:textSize="17sp" />
                    
                    <TextView android:id="@+id/scan_result_bar_code_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="10dp"
                        android:textSize="17sp" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车架号"
                        android:textSize="17sp" />
                    
                    <TextView android:id="@+id/scan_result_frame_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="10dp"
                        android:textSize="17sp" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电机号"
                        android:textSize="17sp" />
                    
                    <TextView android:id="@+id/scan_result_motor_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="10dp"
                        android:textSize="17sp" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生产日期"
                        android:textSize="17sp" />
                    
                    <TextView android:id="@+id/scan_result_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="10dp"
                        android:textSize="17sp" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电压"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/scan_result_voltage_sp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_bg"
						android:layout_alignParentRight="true" />
                </RelativeLayout>
                
                 <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="轮径"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/scan_result_wheel_diameter_sp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_bg"
						android:layout_alignParentRight="true" />
                </RelativeLayout>
                
                  <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="极对数"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/scan_result_pole_number_sp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_bg"
                        android:gravity="right"
						android:layout_alignParentRight="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/scan_button"
                        style="@style/common_button_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_scan" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>