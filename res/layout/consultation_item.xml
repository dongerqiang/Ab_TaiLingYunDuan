<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include android:id="@+id/consultation_item_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/index_grey_line"/>
    
    
    <ImageView android:id="@+id/consultation_item_image"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/consultation_item_line"
        android:layout_marginLeft="20dp"/>
    
    <TextView android:id="@+id/consultation_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@id/consultation_item_image"
        android:layout_toRightOf="@id/consultation_item_image"
        android:textSize="14sp"
        android:singleLine="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"/>
    
    <TextView android:id="@+id/consultation_item_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/consultation_item_title"
        android:layout_toRightOf="@id/consultation_item_image"
        android:textColor="@color/gray"
        android:textSize="12sp"/>
    
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/consultation_item_image"
        android:layout_alignBottom="@id/consultation_item_image"
        android:orientation="vertical">
       
       <TextView android:id="@+id/consultation_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_gravity="right"/>
       
   </LinearLayout>
   
</RelativeLayout>
